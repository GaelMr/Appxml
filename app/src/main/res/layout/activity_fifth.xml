<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_backround"
    tools:context=".FifthActivity">

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Ultima cita"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="#DAFFFE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitulo"
        app:layout_constraintVertical_bias="0.5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtFechaCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de la cita:"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="144dp" />

            <TextView
                android:id="@+id/lblFechaCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Fecha*"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="145dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar: "
                tools:layout_editor_absoluteX="67dp"
                tools:layout_editor_absoluteY="224dp" />

            <TextView
                android:id="@+id/textLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Apellido*"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="224dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblRazon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Razon: "
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="304dp" />

            <TextView
                android:id="@+id/txtRazon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Edad*"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="304dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblReceta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receta:"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="502dp" />

                <TextView
                    android:id="@+id/txtReceta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Receta*"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="542dp" />

                <TextView
                    android:id="@+id/lblRecomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recomendaciones"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="383dp" />

                <TextView
                    android:id="@+id/txtRecomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Recomendaciones*"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="423dp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>